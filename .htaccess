RewriteEngine on
RewriteRule ^api/$ api.php
RewriteRule ^api/([a-zA-Z0-9_-]+)/$ api.php?module=$1
RewriteRule ^api/([a-zA-Z0-9_-]+)/([a-zA-Z0-9_-]+)/$ api.php?module=$1&script=$2
RewriteRule ^api/([a-zA-Z0-9_-]+)/([a-zA-Z0-9_-]+)/(.+)$ api.php?module=$1&script=$2&$3
RewriteRule ^api/([a-zA-Z0-9_-]+)/([a-zA-Z0-9_-]+)/(.+)/(.+)$ api.php?module=$1&script=$2&id=$3&$4